<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pickup_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anusaanth.speedyrentals.PickupSelectActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:layout_width="match_parent"
                android:background="@android:color/black"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/chevy_colorado"
                android:id="@+id/chevyColo" />

            <TextView
                android:text="2020 Chevy Colorado"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <TextView
                android:text="Passengers: 4         Bags: 3"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <TextView
                android:text="$90/day"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView16" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:background="@android:color/black"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ram_1500"
                android:id="@+id/ram1500" />

            <TextView
                android:text="2020 Ram 1500"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView41" />

            <TextView
                android:text="Passengers: 5         Bags: 4"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView42" />

            <TextView
                android:text="$100/day"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView43" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:background="@android:color/black"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ford_f150"
                android:id="@+id/fordF150" />

            <TextView
                android:text="2020 Ford F-150"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView44" />

            <TextView
                android:text="Passengers: 5         Bags: 4"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView45" />

            <TextView
                android:text="$80/day"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView46" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
